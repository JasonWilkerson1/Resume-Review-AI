# Base
NODE_ENV=development
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:1337

# App
APP_NAME="Resume Optimizer AI"
APP_DESCRIPTION="Optimize your resume for ATS and land your dream job"

# Auth
AUTH_STRATEGY=local
AUTH_COOKIE_NAME=auth._token
AUTH_TOKEN_TYPE=Bearer
AUTH_TOKEN_HEADER=Authorization
AUTH_REFRESH_TOKEN_ENABLED=true
AUTH_REFRESH_TOKEN_MAX_AGE=60 * 60 * 24 * 30 # 30 days

# AWS
AWS_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=your-cognito-user-pool-id
AWS_COGNITO_CLIENT_ID=your-cognito-client-id
AWS_S3_BUCKET=resume-optimizer-files

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Google Analytics
GOOGLE_ANALYTICS_ID=your-ga-id

# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Feature Flags
FEATURE_PREMIUM=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_RESUME_ANALYSIS=true
